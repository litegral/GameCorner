<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <!-- Outer circle with dark border -->
            <item>
                <shape android:shape="oval">
                    <stroke android:width="2dp" android:color="@color/primary_dark" />
                    <size android:width="20dp" android:height="20dp" />
                    <solid android:color="@android:color/white" />
                </shape>
            </item>
            <!-- Inner dark circle -->
            <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp">
                <shape android:shape="oval">
                    <solid android:color="@color/primary_dark" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="@color/text_muted" />
            <size android:width="20dp" android:height="20dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector> 