<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#E6A445"
                android:endColor="#E07460"
                android:type="linear"
                android:angle="45" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F8B654"
                android:endColor="#F98271"
                android:type="linear"
                android:angle="45" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector> 